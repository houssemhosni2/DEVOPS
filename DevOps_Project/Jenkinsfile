pipeline {
    agent any

    environment {
        // Set the Maven home and ensure it is included in the PATH
        M2_HOME = "/usr/share/maven"
        PATH = "${M2_HOME}/bin:${env.PATH}"
        HOME = "/var/lib/jenkins" // Set the Jenkins home directory
        MAVEN_OPTS = "-Dmaven.repo.local=/var/lib/jenkins/.m2/repository" // Set Maven local repository
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the Git repository
                git branch: 'ahmed2', url: 'https://github.com/zankech/project.git'
            }
        }
        stage('Build') {
            steps {
                // Build the project using Maven
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                // Run tests using Maven
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                // Placeholder for deployment steps
                echo 'Deploying application...'

            }
        }
    }
    post {
        success {
            // Actions to take upon success
            echo 'Pipeline succeeded!'
        }
        failure {
            // Actions to take upon failure
            echo 'Pipeline failed!'
        }
    }
}
