pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'ahmed2', url: 'https://github.com/zankech/project.git'
            }
        }
        stage('Build') {
            steps {
                sh './mvnw clean package'  // Adjust this command if using regular Maven (mvn) or Gradle
            }
        }
        stage('Test') {
            steps {
                sh './mvnw test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // You can add deploy steps here
            }
        }
    }
    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}